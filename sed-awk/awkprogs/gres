if [ $# -lt "3" ]
then
    echo 验证正则表达式到底匹配的是什么!
    echo Usage: gres pattern replacement file
    echo "  gres g*b 00 words"
    exit
fi
pattern=$1
replacement=$2
if [ -f $3 ]
then
    file=$3
else
    echo $3 is not a file.
    exit
fi

A="`echo | tr '\012' '\001'`"
sed -e "s$A$pattern$A$replacement$A" $file
#sed -e 's/'$pattern'/'$replacement'/' $file
